= form_for @topic do |f|
  - if @topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topic.errors.count, "error")} prohibited this topic from being saved:"
      %ul
        - @topic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :prerequisites_detail
    = f.text_area :prerequisites_detail
  .field
    = f.label :prerequisites_topic
    = f.collection_select(:prerequisites_topic_id, Topic.all, :id, :title)
  .field
    = f.label :passmark
    = f.number_field :passmark
  .actions
    = f.submit 'Save'
